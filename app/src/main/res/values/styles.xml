<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/updatedappcolor</item>
        <item name="colorPrimaryDark">@color/welcome</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/apptheme</item>
        <item name="colorPrimaryDark">@color/welcome</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppThemeFullScreenImage" parent="Theme.Design.Light.NoActionBar">
        <item name="colorPrimary">@color/updatedappcolor</item>
        <item name="colorPrimaryDark">@color/welcome</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreen.TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="FullScreen.TextAppearance.Title.Inverse" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="txtlable" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/updatedappcolor</item>
        <item name="colorPrimaryDark">@color/updatedappcolor</item>
        <item name="colorAccent">@color/updatedappcolor</item>
    </style>

    <style name="AlertDialog.AppCompat.CircleBackground">
        <item name="android:background">@drawable/dialog_circle</item>
    </style>

    <style name="RoundedDialog">
        <item name="android:background">@drawable/dialog_btn_rounded</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

</resources>
