    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <ImageView
            android:id="@+id/buttonAttach"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:onClick="attackClicked"
            android:src="@drawable/ic_attach_file_black_24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/editTextMessage"
            />
        <ImageView
            android:id="@+id/buttonEmoji"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:src="@drawable/smiley"
            android:layout_toRightOf="@+id/buttonAttach"
            android:layout_alignBottom="@+id/editTextMessage"
            />
        <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextMessage"
            android:textCursorDrawable="@null"
            android:hint="Type a message"
            android:backgroundTint="@color/darker_gray"
            android:layout_toStartOf="@+id/buttonMessage"
            android:layout_toRightOf="@+id/buttonEmoji"
            android:layout_toEndOf="@+id/buttonEmoji"
            emojicon:emojiconSize="28sp"/>
        <ImageView
            android:id="@+id/buttonMessage"
            android:src="@android:drawable/ic_menu_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:layout_alignBottom="@+id/editTextMessage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
